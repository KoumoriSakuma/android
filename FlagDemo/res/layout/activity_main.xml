            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旗帜：" />

        <EditText
            android:id="@+id/et_1"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="80dp"
        android:layout_height="wrap_content" 
        android:text="下一页"/>

</LinearLayout>